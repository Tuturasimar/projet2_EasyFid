@model Projet2_EasyFid.Models.Cra
@{
    Layout = "_Layout";
    ViewBag.Title = "Formulaire création d'un Cra";
}
<h2>Formulaire de création du Cra</h2>
@using (Html.BeginForm("CreateCra", "Salarie"))
{
    <fieldset>
        <legend>Formulaire d'ajout</legend>
        <table id="cra" border="0">
            <tr>
            <td>@Html.HiddenFor(m=> Model.Id)</td>
            <td>@Html.Label("CreatedAt")</td>
            <td>@Html.EditorFor(mcreated => Model.CreatedAt)</td>
            </tr>
            @*Liste déroulante pour choisir la mission effectuee*@
            <tr>
                <td>@Html.Label("missions", "Mission : ")</td>
                <td>@Html.DropDownList("missions", new SelectList(ViewBag.missions, "Id", "Name"))</td>
            </tr>

        </table><br>

        <input type="submit" value="Valider" />
    </fieldset>
}