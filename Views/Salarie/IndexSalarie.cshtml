@using Projet2_EasyFid.Models;
@model Projet2_EasyFid.ViewModels.SalarieViewModel
@{
    Layout = "_Layout";
    ViewBag.Title = "SalarieAccueil";
}

<h2>Bienvenue sur votre espace personnel</h2>
<table id="cras" border="1">
    <tr>
        <td>Date de création</td>
        <td>Date de modification</td>
        <td>Status</td>
        <td>Modification</td>
        <td>Suppression</td>
        <td>Détails</td>
    </tr>
    @foreach (var cra in Model.Cras)
    {
        <tr>
            <td>@cra.CreatedAt.ToString("dd/MM/yyyy")</td>
            <td>@cra.UpdatedAt.ToString("dd/MM/yyyy")</td>
            <td>@cra.StateCra</td>
            <td>@Html.ActionLink("Modifier", "UpdateCra", new { id = cra.Id})</td>
            <td>@Html.ActionLink("Supprimer", "IndexSalarie")</td>
            <td>@Html.ActionLink("Détails", "CraDetail", "Salarie", new { id = cra.Id})</td>
        </tr>
    }
</table>
<div>
    @Html.ActionLink("Ajouter", "CreateCra")
</div>