@model Projet2_EasyFid.Models.Mission
@{
    Layout = "_Layout";
    ViewBag.Title = "Modification de Mission";

}


    @using (Html.BeginForm("UpdateMission", "Manager", FormMethod.Post))
    {
        <fieldset>
            <legend>Modifier une mission</legend>
            @Html.LabelFor(m => Model.Name)
            @Html.TextBoxFor(m => Model.Name)
            @Html.ValidationMessageFor(m => Model.Name)
            <br />
            @Html.LabelFor(m => Model.MissionStart)
            @Html.EditorFor(m => Model.MissionStart, "yyyy-MM-dd")
            <br />
            @Html.LabelFor(m => Model.MissionEnd)
            @Html.EditorFor(m => Model.MissionEnd,"yyyy-MM-dd")
            <br />
            @Html.LabelFor(m => Model.MissionType)
            @Html.TextBoxFor(m => Model.MissionType)
            @Html.ValidationMessageFor(m => Model.MissionType)
            <br />
            <input type="submit" value="Modifier" />
            @Html.ActionLink("Retour", "SeeMissions")
        </fieldset>
    }
    <script type="text/javascript" src="~/Scripts/jquery-3.3.1.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.validate-vsdoc.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.validate.unobtrusive.js"></script>
