@model Projet2_EasyFid.ViewModels.ManagerViewModel
@{
    Layout = "_Layout";
    ViewBag.Title = "ManagerAccueil";
}

<h2>Bienvenue sur votre espace personnel</h2>
<table id="Missions" border="1">
    <tr>
        <td>Date de création</td>
        <td>Date de modification</td>
        <td>Status</td>
        <td>Modification</td>
        <td>Suppression</td>
    </tr>
    @foreach (var mission in Model.Missions)
    {
        <tr>
            <td>@mission.Name</td>
            <td>@mission.MissionStart</td>
            <td>@mission.MissionEnd</td>
            <td>@mission.Tjm</td>
            <td>@mission.MissionType</td>

            <td>@Html.ActionLink("Modifier", "UpdateMission", new { id = mission.Id})</td>
            <td>@Html.ActionLink("Supprimer", "IndexManager")</td>
        </tr>
    }
    <div>
        @Html.ActionLink("Ajouter", "CreateMission")
    </div>

</table>