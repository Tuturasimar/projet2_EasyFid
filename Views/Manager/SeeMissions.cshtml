@model Projet2_EasyFid.ViewModels.MissionListViewModel
@{
    Layout = "_Layout";
    ViewBag.Title = "Liste des Missions";
}

@Html.ActionLink("Retour", "Index", new { @class = "btn btn-primary" })

<h2>Liste des missions</h2>
<div border="1" style="">
    @Html.ActionLink("Créer mission", "CreateMission")
  
</div>
<div border="1">
    @Html.ActionLink("Affecter mission", "CreateMissionUser")
</div>
<div border="1">
    @Html.ActionLink("Liste des affectations", "SeeMissionUsers")
</div>
<table id="Missions" border="1">
    <tr>
        <td>Nom</td>
        <td>Date de début</td>
        <td>Date de fin</td>
        <td>Type de mission</td>
        <td>Modifier</td>
        <td>Supprimer</td>
        <td>Voir les avis</td>
    </tr>
    @foreach (var mission in Model.Missions)
    {
        <tr>
            <td>@mission.Name</td>
            <td>@mission.MissionStart.ToString("dd/MM/yyyy")</td>
            <td>@mission.MissionEnd.ToString("dd/MM/yyyy")</td>
            <td>@mission.MissionType</td>

            <td>@Html.ActionLink("Modifier", "UpdateMission", new { id = mission.Id })</td>
            <td>@Html.ActionLink("Clôturer", "IndexManager")</td>
            <td>@Html.ActionLink("Voir les avis", "SeeUserFeedback", new { id = mission.Id})</td>

        </tr>
    }
</table>